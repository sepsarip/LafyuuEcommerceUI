<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Home">

    <!--  search fav notif-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editSearch"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bg_edit"
            android:drawableLeft="@drawable/search"
            android:fontFamily="@font/poppins_light"
            android:hint="Search Product"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/love" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/notification" />

    </LinearLayout>

    <!--  carousel effect, categori , flash sale , mega sale, recomended product  -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/promoimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:padding="10dp"
                    android:src="@drawable/promo1" />

                <!-- promotion period-->

                <TextView
                    android:id="@+id/TextCarosel"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="43dp"
                    android:layout_marginEnd="114dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Super Flash Sale 50% Off"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/promoimage"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="-8dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="7dp"
                    android:src="@drawable/slideshow" />

            </RelativeLayout>

            <!--categori-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Category"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/morecategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="80dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="More Category"
                    android:textColor="@color/primary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/productman"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_horizontal"
                            android:text="Man" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/productdress"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_horizontal"
                            android:text="Dress" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/productmanwork"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_horizontal"
                            android:text="Man Work Equipment" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/womanbag"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_horizontal"
                            android:text="Woman Bag" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="70dp"
                            android:src="@drawable/manshoe"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_horizontal"
                            android:text="Man Shoes" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/megasale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="95dp"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Mega Sale"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seemore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="95dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="See More"
                    android:textColor="@color/primary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <!--mega sale-->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--tas nike-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/megatas"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_horizontal"
                            android:text="MS - Nike Air Max 270 React..."
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_horizontal"
                            android:text="$299,43"
                            android:textColor="@color/primary"
                            android:layout_marginTop="15dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:gravity="center_horizontal"
                                android:text="534,33" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:gravity="center_horizontal"
                                android:text=" 24% off"
                                android:textColor="@color/txt_color_3" />

                        </LinearLayout>
                    </LinearLayout>

                    <!--spatu-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/blackshoe" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_horizontal"
                            android:text="MS - Nike Air Max 270 React..."
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:gravity="center_horizontal"
                            android:text="$299,43"
                            android:textColor="@color/primary"
                            android:layout_marginTop="15dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:gravity="center_horizontal"
                                android:text="534,33" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:gravity="center_horizontal"
                                android:text=" 24% off"
                                android:textColor="@color/txt_color_3" />

                        </LinearLayout>
                    </LinearLayout>

                    <!--tas-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/megatashijau" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center_horizontal"
                            android:text="MS - Nike Air Max 270 React..."
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginTop="15dp"
                            android:gravity="center_horizontal"
                            android:text="$299,43"
                            android:textColor="@color/primary" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:gravity="center_horizontal"
                                android:text="534,33" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:gravity="center_horizontal"
                                android:text=" 24% off"
                                android:textColor="@color/txt_color_3" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>


            <!-- recomended product-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/recomendimage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="0dp"
                    android:padding="10dp"
                    android:src="@drawable/imagerecomend" />

                <TextView
                    android:id="@+id/TextRecomend"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="63dp"
                    android:layout_marginEnd="104dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Recomended Product"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextSubRecomen"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/TextRecomend"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="106dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="We recommend the best for you"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <!-- Cell 1 -->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp">

                    <!-- Gambar -->
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imagerecomend" />

                    <!-- Teks -->
                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image1"
                        android:text="Product Name"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <!-- Rating Bintang -->
                    <RatingBar
                        android:id="@+id/rating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text1"
                        android:numStars="5"
                        android:rating="4"
                        android:scaleX="0.55"
                        android:scaleY="0.55"
                        android:stepSize="1" />

                    <!-- Harga -->
                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rating1"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:text="Price: $50"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <!-- Diskon Price -->
                    <TextView
                        android:id="@+id/discount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/price1"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp"
                        android:text="Discount Price: $40"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                </RelativeLayout>


            </GridLayout>



        </LinearLayout>

    </ScrollView>

    <!--    home explore cart offer account-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

</LinearLayout>
